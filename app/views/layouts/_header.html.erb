<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
    	<div class="pull-left"><%= link_to image_tag("gettinout_logo.png", alt: "Getting Out", class: "logo"), root_path %></div>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li class="divider"></li>
              <li><%= link_to "Settings", settings_path %></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "destroy" %>
              </li>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>